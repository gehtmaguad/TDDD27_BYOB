extends layout

block content
  .row-page-header
    .col-lg-12
      h1 Write a comment!
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/location", method="get", fole="form")
        .form-group
          label.col-sm-2.control-label(for="comment") Comment
          .col-sm-10
            textarea#comment.form-control(name="review", rows="3")
        button.btn.btn-primary.pull-right Add comment
